extends ./master

block configuration
    - noNavbarCollapse = false;

block prepend scripts
    unless noAccessToken
        script.
            window.accessToken = "#{access_token}";

block navigation
    div#main-navbar-collapse.collapse.navbar-collapse
        ul.nav.navbar-nav
            li: a(href="/admin/accounts") Accounts
            li.dropdown
                a.dropdown-toggle(href="#", data-toggle="dropdown", role="button", aria-haspopup="true", aria-expanded="false") OAuth 2.0
                    span.caret
                ul.dropdown-menu
                    li: a(href="/admin/oauth2/clients") Clients
                    li: a(href="/admin/oauth2/tokens") Access Tokens

        ul.nav.navbar-nav.navbar-right
            li: a(href="/admin/logout") Logout

    </ul>