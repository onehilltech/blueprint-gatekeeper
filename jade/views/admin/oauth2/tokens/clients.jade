extends tokens

block append configuration
    - var currTab = 'clients';

block tokenTable
    table.table.table-stripped
        thead
            tr
                th.col-md-2 Client
                th.col-md-8 Token
                th.col-md-1 Access
                th.col-md-1
        tbody
            for token in tokens
                tr
                    td: a(href="/admin/oauth2/clients/#{token.client._id}") #{token.client.name}
                    td #{token.token}
                    td: input(type="checkbox", name="enabled", checked=token.enabled, data-token-id="#{token.id}" data-size="mini", data-on-text="Enabled", data-off-text="Disabled")
                    td: button.btn.btn-xs.btn-danger.delete-token(type="button" data-token-id="#{token.id}") Delete token

